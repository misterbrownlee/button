.button
  position relative
  display inline-block
  padding 0 0.75em
  margin 0
  overflow hidden
  font inherit
  color inherit
  text-align center
  text-decoration none
  text-overflow ellipsis
  white-space nowrap
  vertical-align middle
  cursor pointer
  background transparent
  border none
  box-sizing border-box
  background-clip padding-box
  user-select none

.button--quiet
  // Instead of using extends see if this can be accomplished with button-base mixin
  @extends .button
  background-color transparent
  /* Border is added so button doesn't shift when clicked */
  border 1px solid transparent
  box-shadow none

.button--large
  // Instead of using extends see if this can be accomplished with button-base mixin
  @extends .button

